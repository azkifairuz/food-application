<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SuccessActivity"
    android:background="#f5f5f5"
    android:layout_gravity="center"
    android:gravity="center">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:gravity="center"
        >
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:elevation="5dp">
            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="450dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvPaymentSucces"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran Berhasil"
                    android:textSize="16sp"
                    android:layout_marginTop="90dp"
                    android:textColor="#333333"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="149dp"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metode"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tvPayMethod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bri-Mobile"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#333333"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub Total"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tvST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#333333"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pajak"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tvPajak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 1.000"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#333333"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_regular"/>
                    <TextView
                        android:id="@+id/tvTanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="today"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="#333333"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="71dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Pembayaran"
                        android:textSize="12sp"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/tvTotalPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total"
                        android:textColor="@color/oren"
                        android:textSize="16sp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_succes"
            android:layout_gravity="center_horizontal"
            android:elevation="10dp">
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>